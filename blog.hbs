{{!< default}}

{{!-- Ghost doesn't do code injection for pages used as data in routes.yaml --}}
{{#contentFor "styles"}}
    {{#page}} {{#if codeinjection_head}} {{{codeinjection_head}}} {{/if}} {{/page}}
{{/contentFor }}

{{#contentFor "scripts"}}
    {{#page}} {{#if codeinjection_foot}} {{{codeinjection_foot}}} {{/if}} {{/page}}
{{/contentFor }}

{{#page}}
    {{#has tag="#blog-grid"}}
        {{#with ..}}
            {{> blog-grid }}
        {{/with}}
    {{else has tag="#blog-directory"}}
        {{#with ..}}
            {{> blog-directory }}
        {{/with}}    
    {{else}}
        {{#with ..}}
            {{> blog-minimal }}
        {{/with}}
    {{/has}}
{{/page}}