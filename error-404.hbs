{{!< default}}

{{#contentFor "extra-footer-class"}} no-space-top {{/contentFor}}

<section class="page-error-404 outer xl:outer-xl">
    <div class="inner min-h-[calc(100vh_-_theme(spacing.20))] flex items-center justify-center py-10">
        <section class="flex items-center -translate-y-20">
            <h1 class="font-bold text-2xl sm:text-6xl pr-3 mr-3 sm:pr-6 sm:mr-6 text-gray-900 dark:text-gray-50 border-r border-gray-900/10 dark:border-gray-50/10">
                {{statusCode}}
            </h1>
            <p class="text-sm sm:text-base text-gray-500 dark:text-gray-400">
                {{t "This page could not be found."}}
            </p>
        </section>
    </div>
</section>
